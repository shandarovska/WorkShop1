@model IEnumerable<WorkShop1.Models.Course>

@{
    ViewData["Title"] = "My Courses";
}

<h2>My Courses</h2>

@if (!Model.Any())
{
    <p class="text-muted">You are not assigned to any courses.</p>
}
else
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Title</th>
                <th>Semester</th>
                <th>Programme</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>@course.Semester</td>
                    <td>@course.Programme</td>
                    <td>
                        <a class="btn btn-sm btn-primary"
                           asp-action="MyCourseDetails"
                           asp-route-id="@course.Id">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}