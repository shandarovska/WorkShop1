@model WorkShop1.Models.ViewModels.StudentCoursesVM

@{
    ViewData["Title"] = "My Courses";
}

<h2>My Courses</h2>

@if (Model.Rows == null || !Model.Rows.Any())
{
    <p class="text-muted">You are not enrolled in any courses.</p>
}
else
{
    <table class="table table-striped table-sm align-middle">
        <thead>
            <tr>
                <th>Course</th>
                <th style="width:90px;">Year</th>
                <th style="width:110px;">Semester</th>

                <th style="width:70px;">Exam</th>
                <th style="width:80px;">Seminar</th>
                <th style="width:80px;">Project</th>
                <th style="width:70px;">Add.</th>

                <th style="width:70px;">Grade</th>
                <th style="width:120px;">Finish</th>
                <th style="width:90px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Rows)
            {
                <tr>
                    <td>@r.CourseTitle</td>
                    <td>@(r.Year?.ToString() ?? "-")</td>
                    <td>@(string.IsNullOrWhiteSpace(r.Semester) ? "-" : r.Semester)</td>

                    <td>@(r.ExamPoints?.ToString() ?? "-")</td>
                    <td>@(r.SeminarPoints?.ToString() ?? "-")</td>
                    <td>@(r.ProjectPoints?.ToString() ?? "-")</td>
                    <td>@(r.AdditionalPoints?.ToString() ?? "-")</td>

                    <td>@(r.Grade?.ToString() ?? "-")</td>
                    <td>@(r.FinishDate?.ToString("yyyy-MM-dd") ?? "-")</td>

                    <td>
                        <a class="btn btn-sm btn-primary" href="/StudentCourses/Details/@r.CourseId">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}