@model IEnumerable<WorkShop1.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<h2>Students</h2>

<form method="get" asp-action="Index" class="row g-2 mb-3">
    <div class="col-md-2">
        <input name="index" value="@Context.Request.Query["index"]" class="form-control" placeholder="Index" />
    </div>

    <div class="col-md-2">
        <input name="firstName" value="@Context.Request.Query["firstName"]" class="form-control" placeholder="First name" />
    </div>

    <div class="col-md-2">
        <input name="lastName" value="@Context.Request.Query["lastName"]" class="form-control" placeholder="Last name" />
    </div>

    <div class="col-md-3">
        <select name="courseId" class="form-select" asp-items="ViewBag.Courses">
            <option value="">All courses</option>
        </select>
    </div>

    <div class="col-md-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a class="btn btn-secondary" asp-action="Index">Reset</a>
    </div>
</form>

<table class="table table-striped table-sm align-middle">
    <thead>
        <tr>
            <th>Index</th>
            <th>First name</th>
            <th>Last name</th>
            <th style="width:120px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.StudentId</td>
                <td>@s.FirstName</td>
                <td>@s.LastName</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@s.Id">Details</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@s.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@s.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
